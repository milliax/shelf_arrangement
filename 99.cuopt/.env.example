# Database Configuration - Individual Components
DB_HOST="your-database-host.com"
DB_PORT="5432"
DB_NAME="your_database_name"
DB_USER="your_username"
DB_PASSWORD="your_password"

# Additional connection parameters
DB_SCHEMA="public"
DB_PGBOUNCER="true"
DB_CONNECTION_LIMIT="10"

# Alternative: Full database URL (if you prefer this format)
# DATABASE_URL="postgresql://your_username:your_password@your-database-host.com:5432/your_database_name?schema=public&pgbouncer=true&connection_limit=10"

# Optional: Enable SQL query logging (true/false)
DB_ECHO="false"

# Python Environment Settings
PYTHONPATH="."
PYTHONUNBUFFERED="1"

# Application Settings
ENV="development"
DEBUG="true"